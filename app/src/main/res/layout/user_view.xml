<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/user_view_bg"
    android:orientation="horizontal" android:layout_width="200dp"
    android:gravity="center_vertical"
    android:layout_height="36dp">

    <ProgressBar android:id="@+id/loadingSpinner"
        android:layout_width="28dp"
        android:layout_height="28dp" />

    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/imageViewProfile"
        android:layout_width="28dp"
        android:layout_height="28dp" />
    
    <TextView android:id="@+id/textViewName"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:textColor="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />

</LinearLayout>