<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="de.moritzbruder.bofrost.ChallengeCameraActivity">
    
    <RelativeLayout android:id="@+id/challengeDescription"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <android.support.v7.widget.CardView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.CardView>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_fileName="animation_drink.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

    </RelativeLayout>

    <TextureView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>